	<form method="post" action="settings/createCalendar" data-remote="true" >
	<div class="calDetaiCnt radius8">
		<div class="calTitle">
			<i class="fa fa-star-o"></i>
			<input type="text" placeholder="New Calendar" id="calName" name="calnm" value="" />
		</div>
		<table cellpadding="0" cellspacing="0" border="0" width="100%">
			<tr>
				<td class="setCol1" width="35%"><label class="setTitleCnt">Merge this calendar to</label></td>
				<td class="calMerge" width="65%">
					<select>
						<option>Home</option>
						<option>Sport</option>
					</select>
					<input type="button" value="Merge" />
				</td>
			</tr>
